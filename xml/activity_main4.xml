<?xml version="1.0" encoding="utf-8"?>
<!--REGISTER PAGE-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4"
    android:background="@color/white1">

    <TextView
        android:id="@+id/loginJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/blue1"
        android:text="Register" />

    <TextView
        android:id="@+id/namaJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/loginJudul"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/grey1"
        android:text="Name" />

    <EditText
        android:id="@+id/namaInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/namaJudul"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_rounded_border"
        android:hint="Enter Your Full Name"
        android:inputType="text"
        android:textColorHint="@color/grey2"
        android:textColor="@color/black1"
        android:padding="16dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/emailJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/namaInput"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/grey1"
        android:text="Email" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/emailJudul"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittext_rounded_border"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/grey2"
        android:textColor="@color/black1"
        android:padding="16dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/pwJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailInput"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Password"
        android:textColor="@color/grey1"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/pwInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pwJudul"
        android:hint="Enter Your Password"
        android:textSize="12sp"
        android:textColorHint="@color/grey2"
        android:textColor="@color/black1"
        android:background="@drawable/edittext_rounded_border"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:inputType="textPassword"/>

    <LinearLayout
        android:id="@+id/yesno"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pwInput"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">
        <ToggleButton
            android:id="@+id/toggleButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textOff="OFF"
            android:textOn="ON" />
        <ImageView
            android:id="@+id/statusImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/accept"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnRegis"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/yesno"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Register"
        android:textColor="@color/white1"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/or"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/btnRegis"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/or"/>

    <Button
        android:id="@+id/loginGoogle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/or"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/login_google"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/loginApple"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/loginGoogle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_apple"/>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginApple"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey1"
            android:textSize="12sp"
            android:text="Don't have account? "/>
        <TextView
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Log In"
            android:textAllCaps="false"
            android:textColor="@color/blue1"
            android:textSize="12sp"
            android:background="@color/white1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/grey1"
                android:text="By registering, you agree to our " />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/blue1"
                android:fontFamily="@font/poppins_bold"
                android:text="TERMS AND CONDITIONS"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/grey1"
                android:text="and you have read our " />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/blue1"
                android:fontFamily="@font/poppins_bold"
                android:text="PRIVACY NOTICE"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>