<?xml version="1.0" encoding="utf-8"?>
<!--REGISTER LOADING PAGE-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4_2"
    android:background="@color/white1">
    <LinearLayout
        android:id="@+id/lanjutLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/check_home"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Anda berhasil Registrasi!"
            android:textSize="16sp"
            android:textColor="@color/oren1"
            android:fontFamily="@font/poppins_bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tunggu beberapa saat, Anda akan dialihkan ke menu login"
            android:textSize="8sp"
            android:textColor="@color/black1"
            android:fontFamily="@font/poppins_medium"/>
    </LinearLayout>
</RelativeLayout>