<?xml version="1.0" encoding="utf-8"?>
<!--LOGIN PAGE-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:background="@color/white1">

    <TextView
        android:id="@+id/loginJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/blue1"
        android:text="Log In" />

    <TextView
        android:id="@+id/emailJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/loginJudul"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/grey1"
        android:text="Email" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/emailJudul"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_rounded_border"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColor="@color/black1"
        android:textColorHint="@color/grey2"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/pwJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailInput"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Password"
        android:textColor="@color/grey1"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/pwInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pwJudul"
        android:hint="Enter Your Password"
        android:textSize="12sp"
        android:background="@drawable/edittext_rounded_border"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:textColorHint="@color/grey2"
        android:textColor="@color/black1"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/pwInput"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Log In"
        android:textColor="@color/white1"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/forget_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLogin"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Forgot Password?"
        android:textColor="@color/blue1"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/or"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/forget_forward"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/or" />

    <ImageView
        android:id="@+id/loginGoogle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/or"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/login_google"/>

    <ImageView
        android:id="@+id/loginApple"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/loginGoogle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_apple"/>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="16dp"
        android:layout_below="@id/loginApple"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have account? "
            android:textColor="@color/grey1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Registrasi"
            android:textAllCaps="false"
            android:textColor="@color/blue1"
            android:textSize="12sp"
            android:background="@color/white1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/grey1"
                android:text="By registering, you agree to our " />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/blue1"
                android:fontFamily="@font/poppins_bold"
                android:text="TERMS AND CONDITIONS"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/grey1"
                android:text="and you have read our " />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="@color/blue1"
                android:fontFamily="@font/poppins_bold"
                android:text="PRIVACY NOTICE"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>